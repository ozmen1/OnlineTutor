@using OnlineTutor.Web.Models
@model ShowCardDetailsDto

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h1 class="card-title display-6">@Model.Title</h1>
                <div>@Model.Description</div>
                <div class="w-25">Teklif Edilen Ücret: <strong class="text-muted h-5">@Model.Price</strong></div>
            </div>
            <div class="col-4">
                <img class="img-thumbnail" src="https://www.azharpark.com/assets/imgs/default.jpg" />
            </div>
        </div>
        <div class="row">
            <div>Öğretmen Bilgileri</div>
            <div><strong>Ad Soyad: </strong>@Model.FirstName @Model.LastName</div>



        </div>
        <div class="row pt-2">
            <div class="btn btn-outline-info">Ders Almak İstiyorum</div>
        </div>
    </div>
</div>
<hr />